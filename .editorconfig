# EditorConfig: https://editorconfig.org
root = true

# 기본 설정 (모든 파일)
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# Python 파일
[*.py]
indent_size = 4
max_line_length = 100

# JavaScript/TypeScript 파일
[*.{js,jsx,ts,tsx}]
indent_size = 2

# JSON 파일
[*.json]
indent_size = 2

# YAML 파일
[*.{yml,yaml}]
indent_size = 2

# Markdown 파일
[*.md]
trim_trailing_whitespace = false

# Makefile
[Makefile]
indent_style = tab
